package com.zoomiti.realcore.util.compat;

import com.zoomiti.realcore.init.CoreModBlocks;
import com.zoomiti.realcore.init.CoreModItems;
import com.zoomiti.realcore.util.interfaces.IPlugin;

import net.minecraftforge.fml.common.event.FMLInitializationEvent;
import net.minecraftforge.fml.common.event.FMLPostInitializationEvent;
import net.minecraftforge.fml.common.event.FMLPreInitializationEvent;
import net.minecraftforge.oredict.OreDictionary;

public class OreDictPlugin implements IPlugin {

	@Override
	public void preInit(FMLPreInitializationEvent event) {
		// Do nothing
	}

	@Override
	public void init(FMLInitializationEvent event) {
		OreDictionary.registerOre("nuggetAluminum", CoreModItems.NUGGET_ALUMINUM);
		OreDictionary.registerOre("nuggetBrass", CoreModItems.NUGGET_BRASS);
		OreDictionary.registerOre("nuggetBronze", CoreModItems.NUGGET_BRONZE);
		OreDictionary.registerOre("nuggetCopper", CoreModItems.NUGGET_COPPER);
		OreDictionary.registerOre("nuggetFenigd", CoreModItems.NUGGET_FENIGD);
		OreDictionary.registerOre("nuggetGadolinium", CoreModItems.NUGGET_GADOLINIUM);
		OreDictionary.registerOre("nuggetLead", CoreModItems.NUGGET_LEAD);
		OreDictionary.registerOre("nuggetNickel", CoreModItems.NUGGET_NICKEL);
		OreDictionary.registerOre("nuggetPlatinum", CoreModItems.NUGGET_SILVER);
		OreDictionary.registerOre("nuggetTin", CoreModItems.NUGGET_TIN);
		OreDictionary.registerOre("nuggetZinc", CoreModItems.NUGGET_ZINC);
		
		OreDictionary.registerOre("ingotAluminum", CoreModItems.INGOT_ALUMINUM);
		OreDictionary.registerOre("ingotBrass", CoreModItems.INGOT_BRASS);
		OreDictionary.registerOre("ingotBronze", CoreModItems.INGOT_BRONZE);
		OreDictionary.registerOre("ingotCopper", CoreModItems.INGOT_COPPER);
		OreDictionary.registerOre("ingotFenigd", CoreModItems.INGOT_FENIGD);
		OreDictionary.registerOre("ingotGadolinium", CoreModItems.INGOT_GADOLINIUM);
		OreDictionary.registerOre("ingotLead", CoreModItems.INGOT_LEAD);
		OreDictionary.registerOre("ingotNickel", CoreModItems.INGOT_NICKEL);
		OreDictionary.registerOre("ingotPlatinum", CoreModItems.INGOT_SILVER);
		OreDictionary.registerOre("ingotTin", CoreModItems.INGOT_TIN);
		OreDictionary.registerOre("ingotZinc", CoreModItems.INGOT_ZINC);
		
		OreDictionary.registerOre("blockAluminum", CoreModBlocks.BLOCK_ALUMINUM);
		OreDictionary.registerOre("blockBrass", CoreModBlocks.BLOCK_BRASS);
		OreDictionary.registerOre("blockBronze", CoreModBlocks.BLOCK_BRONZE);
		OreDictionary.registerOre("blockCopper", CoreModBlocks.BLOCK_COPPER);
		OreDictionary.registerOre("blockFenigd", CoreModBlocks.BLOCK_FENIGD);
		OreDictionary.registerOre("blockGadolinium", CoreModBlocks.BLOCK_GADOLINIUM);
		OreDictionary.registerOre("blockLead", CoreModBlocks.BLOCK_LEAD);
		OreDictionary.registerOre("blockNickel", CoreModBlocks.BLOCK_NICKEL);
		OreDictionary.registerOre("blockPlatinum", CoreModBlocks.BLOCK_SILVER);
		OreDictionary.registerOre("blockTin", CoreModBlocks.BLOCK_TIN);
		OreDictionary.registerOre("blockZinc", CoreModBlocks.BLOCK_ZINC);
		
		OreDictionary.registerOre("oreAluminum", CoreModBlocks.ORE_ALUMINUM);
		OreDictionary.registerOre("oreCopper", CoreModBlocks.ORE_COPPER);
		OreDictionary.registerOre("oreGadolinium", CoreModBlocks.ORE_GADOLINIUM);
		OreDictionary.registerOre("oreLead", CoreModBlocks.ORE_LEAD);
		OreDictionary.registerOre("oreNickel", CoreModBlocks.ORE_NICKEL);
		OreDictionary.registerOre("orePlatinum", CoreModBlocks.ORE_SILVER);
		OreDictionary.registerOre("oreTin", CoreModBlocks.ORE_TIN);
		OreDictionary.registerOre("oreZinc", CoreModBlocks.ORE_ZINC);
	}

	@Override
	public void postInit(FMLPostInitializationEvent event) {
		// Do nothing
	}

}
